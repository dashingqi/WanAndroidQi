<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_15">

    <ImageView
        android:id="@+id/mProjectIv"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_200"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/mProjectTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"

        android:layout_marginStart="@dimen/dp_10"
        android:layout_toRightOf="@+id/mProjectIv"
        android:maxLines="1"
        android:text="仿淘宝项目"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/mProjectDescTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mProjectTitleTv"
        android:layout_margin="@dimen/dp_10"
        android:layout_toRightOf="@+id/mProjectIv"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="这是一个模仿淘宝的一个项目。作为我业余时间练手的"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/mProjectAuthorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toRightOf="@+id/mProjectIv"
        android:layout_alignTop="@+id/mProjectLoveIv"
        android:layout_alignBottom="@+id/mProjectLoveIv"
        android:gravity="center"
        android:text="郭林"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/mProjectTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mProjectLoveIv"
        android:layout_alignBottom="@+id/mProjectLoveIv"
        android:layout_toRightOf="@+id/mProjectAuthorTv"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="@dimen/dp_5"
        android:text="17小时前" />

    <ImageView
        android:id="@+id/mProjectLoveIv"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_alignBottom="@+id/mProjectIv"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_10"
        android:src="@drawable/select_collect_article"
        tools:ignore="ContentDescription"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.1"
        android:layout_below="@+id/mProjectIv"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorPrimary" />


</RelativeLayout>