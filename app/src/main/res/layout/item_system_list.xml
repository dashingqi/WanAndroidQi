<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_15">

    <TextView
        android:id="@+id/mTvSystemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="开发环境"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/mTvCategoryDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTvSystemCategory"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toLeftOf="@+id/mIvNext"
        android:text="AndroidStudio相关 gradle 官方发布"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/mIvNext"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/icon_right_arrow_yellow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.1"
        android:layout_below="@+id/mTvCategoryDetails"
        android:background="@color/colorPrimary" />

</RelativeLayout>